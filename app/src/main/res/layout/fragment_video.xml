<ee.promobox.promoboxandroid.widgets.TurningRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:keepScreenOn="true"
    android:background="@color/black_background"
    tools:context=".fragments.FragmentVideo">

    <TextureView
        android:id="@+id/video_texture_view"
        android:layout_gravity="fill"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <include layout="@layout/player_controls_layout" />

</ee.promobox.promoboxandroid.widgets.TurningRelativeLayout>
